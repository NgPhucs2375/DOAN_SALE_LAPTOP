@{
    ViewBag.Title = "Liên hệ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="section-title">Liên Hệ Với Chúng Tôi</h2>

<div class="product-section contact-page-wrapper">

    <div class="contact-info">
        <h3>Thông Tin Cửa Hàng</h3>
        <p>
            <i class="fa-solid fa-location-dot"></i>
            123 Đường ABC, Quận XYZ, TP. Hồ Chí Minh
        </p>
        <p>
            <i class="fa-solid fa-phone"></i>
            (0123) 456-789
        </p>
        <p>
            <i class="fa-solid fa-envelope"></i>
            contact@laptoppro.com
        </p>
        <p>
            <i class="fa-solid fa-clock"></i>
            Giờ mở cửa: 8:00 - 21:00 (Tất cả các ngày)
        </p>

        <div class="map-container">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.447432856424!2d106.69733431526847!3d10.77698639232098!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752f3855ab10e1%3A0x29611e405a610f7d!2sDinh%20Th%E1%BB%91ng%20Nh%E1%BA%A5t%20(Dinh%20%C4%90%E1%BB%99c%20L%E1%BA%ADp)!5e0!3m2!1svi!2s!4v1678888888888!5m2!1svi!2s"
                    width="100%" height="300" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
    </div>

    <div class="contact-form-container">
        <form action="#" method="post" class="contact-form">
            <h3>Gửi Tin Nhắn Cho Chúng Tôi</h3>

            <div class="form-group">
                <label for="HoTen">Họ và Tên*</label>
                <input type="text" id="HoTen" name="HoTen" required />
            </div>

            <div class="form-group">
                <label for="Email">Email*</label>
                <input type="email" id="Email" name="Email" required />
            </div>

            <div class="form-group">
                <label for="NoiDung">Nội dung tin nhắn*</label>
                <textarea id="NoiDung" name="NoiDung" rows="8" required></textarea>
            </div>

            <button type="submit" class="cart-button">
                <i class="fa-solid fa-paper-plane"></i> Gửi Tin Nhắn
            </button>
        </form>
    </div>
</div>