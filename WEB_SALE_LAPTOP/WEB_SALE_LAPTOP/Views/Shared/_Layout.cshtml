                            <img src="https://cdn.webshopapp.com/shops/215775/files/310339998/payment-methods.png" alt="Payment" style="height: 30px; opacity: 0.8;">
                        </div>
                    </div>
                </div>

                    <div class="footer-bottom" style="border-top: 1px solid #1e293b; padding: 1.5rem 0; margin-top: 0; background: transparent; display: flex; justify-content: center; align-items: center; gap: 10px;">

                        <p style="font-size: 0.9rem; color: #64748b; margin: 0;">&copy; @DateTime.Now.Year Laptop Pro. All rights reserved.</p>

                        <a href="@Url.Action("Login", "AdminAccount")" title="Dành cho Quản trị viên" style="color: #475569; font-size: 0.8rem; transition: color 0.3s;">
                            <i class="fa-solid fa-lock"></i>
                        </a>

                    </div>                
            </div>
        </footer>
    </div>

    <div id="back-to-top" title="Lên đầu trang"><i class="fa-solid fa-arrow-up"></i></div>

    @Scripts.Render("~/bundles/jquery")
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("scripts", required: false)
    <script src="~/Scripts/js/Site.js"></script>

    <script>
        let lastScroll = 0;
        const header = document.getElementById('smartHeader');
        const backToTop = document.getElementById('back-to-top');

        window.addEventListener('scroll', () => {
            const currentScroll = window.pageYOffset;

            // 1. Smart Header Logic
            if (currentScroll > 100 && currentScroll > lastScroll) {
                header.classList.add('hide'); // Cuộn xuống -> Ẩn
            } else {
                header.classList.remove('hide'); // Cuộn lên -> Hiện
            }
            lastScroll = currentScroll;

            // 2. Back to Top Logic
            if (currentScroll > 300) {
                backToTop.classList.add('show');
            } else {
                backToTop.classList.remove('show');
            }
        });

        // Click Back to Top
        backToTop.addEventListener('click', () => {
            window.scrollTo({ top: 0, behavior: 'smooth' });
        });
    </script>

    <div class="chat-bubble-button" id="chat-toggle-button">
        <i class="fa-solid fa-comments fa-2x"></i>
    </div>
    <div class="chat-iframe-container" id="chat-iframe-window">
        <div class="chat-iframe-header">
            <span style="font-weight: 600; color: var(--primary-color);">Hỗ trợ trực tuyến</span>
            <button id="chat-close-button"><i class="fa-solid fa-xmark"></i></button>
        </div>
        <iframe src="https://www.chatbase.co/chatbot-iframe/WDZFpp7MVPpaofJryZ8XK" style="width: 100%; height: 100%; border: none;" frameborder="0"></iframe>
    </div>

</body>
</html>