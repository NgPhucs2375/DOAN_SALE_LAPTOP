<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/css/styles.css" rel="stylesheet" />
    @RenderSection("Styles", required: false)
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', sans-serif;
        }

        .navbar {
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        }

        .card:hover {
            transform: translateY(-8px);
            transition: 0.3s;
            box-shadow: 0 10px 20px rgba(0,0,0,0.15);
        }
    </style>
    @Html.AntiForgeryToken()
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container px-4 px-lg-5">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <img src="~/Content/Images/logo.png" alt="Hưng Phát" width="40" height="40" class="me-2" />
                <b style="color:blue;">Hưng Phát Computer</b>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                    <li class="nav-item">
                        @Html.ActionLink("Trang chủ", "Index", "Home", null, new { @class = "nav-link active" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Giới thiệu", "About", "Home", null, new { @class = "nav-link" })
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Shop
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li>@Html.ActionLink("Tất cả sản phẩm", "Contact", "Home", null, new { @class = "dropdown-item" })</li>
                            <li><hr class="dropdown-divider" /></li>
                            <li>@Html.ActionLink("Loại sản phẩm", "Contact", "Home", null, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("Sản phẩm mới", "Contact", "Home", null, new { @class = "dropdown-item" })</li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("GioHang", "Home")">
                                    <i class="fas fa-shopping-cart"></i> Giỏ Hàng
                                    @{
                                        var gioHang = Session["GioHang"] as DOAN_SALE_LAPTOP.Models.GioHang;
                                        if (gioHang != null && gioHang.TotalItems > 0)
                                        {
                                            <span class="badge badge-pill badge-danger">@gioHang.TotalItems</span>
                                        }
                                    }
                                </a>
                            </li>
                        </ul>
                    </li>

                    @{
                        var kh = Session["KHACHHANG"] as DOAN_SALE_LAPTOP.Models.KhachHang;
                    }

                    @if (kh != null)
                    {
                        <li class="nav-item">
                            <span class="nav-link text-success">Xin chào, @kh.FullNameKH!</span>
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Đăng xuất", "Logout", "Home", null, new { @class = "btn btn-logout ms-2" })
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Đăng nhập", "Login", "Home", null, new { @class = "btn btn-login ms-2" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Đăng ký", "Register", "Home", null, new { @class = "btn btn-register ms-2" })
                        </li>
                    }

                </ul>

                <form class="d-flex">
                    <button class="btn btn-outline-dark" type="submit">
                        <i class="bi-cart-fill me-1"></i>
                        Giỏ hàng
                        <span class="badge bg-dark text-white ms-1 rounded-pill">0</span>
                    </button>
                </form>
            </div>
        </div>
    </nav>


    <header class="banner">
    </header>



    <body>
        <!-- Body content -->
        @RenderBody()
        <!-- Đảm bảo có dòng này -->
        @RenderSection("Scripts", required: false)
    </body>


    <!-- Footer -->
    <footer>
        <div class="container text-center">
            <p class="mb-1">© 2025 Hưng Phát Computer. All rights reserved.</p>
            <p>Địa chỉ: 140 Lê Trọng Tấn, Tân Phú, TP.HCM | Điện thoại: 0909 999 888 | <a href="#">hungphatcomputer.vn</a></p>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/js/scripts.js"></script>
</body>
</html>
