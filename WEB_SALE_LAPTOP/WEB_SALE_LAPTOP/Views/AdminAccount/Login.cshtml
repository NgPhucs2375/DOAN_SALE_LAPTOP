@{
    ViewBag.Title = "Đăng nhập Quản trị";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Vẫn dùng layout chung
}

<h2 class="section-title">Trang Quản Trị</h2>

<div class="product-section" style="max-width: 600px; margin: 0 auto;">
    <div class="contact-form-container">

        @using (Html.BeginForm("Login", "AdminAccount", FormMethod.Post, new { @class = "contact-form" }))
        {
            <h3 class="form-title" style="text-align: left; margin-bottom: 2rem;">
                <i class="fa-solid fa-user-shield" style="color: var(--color-accent);"></i>
                Đăng nhập Admin
            </h3>

            if (ViewBag.Error != null)
            {
                <div class="voucher-message error" style="margin-bottom: 1rem;">@ViewBag.Error</div>
            }

            <div class="form-group">
                <label for="TENDN">Tên đăng nhập (TENDN)*</label>
                <input type="text" id="TENDN" name="TENDN" required class="form-group-input" />
            </div>

            <div class="form-group">
                <label for="MATKHAU">Mật khẩu*</label>
                <input type="password" id="MATKHAU" name="MATKHAU" required class="form-group-input" />
            </div>

            <button type="submit" class="cart-button" style="width: 100%; justify-content: center;">
                Đăng nhập
            </button>
        }
    </div>
</div>