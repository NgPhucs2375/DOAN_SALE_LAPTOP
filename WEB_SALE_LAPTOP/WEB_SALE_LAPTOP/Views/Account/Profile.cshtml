@model WEB_SALE_LAPTOP.Models.CustomerProfileViewModel
@{
    ViewBag.Title = "Thông tin Tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles {
    @Styles.Render("~/Content/css/checkout")
}
@helper RenderStatusBadge(string status)
{
    string badgeClass = "status-pending"; // Vàng (Mặc định)
    if (status == "Đang giao") { badgeClass = "status-shipping"; }
    else if (status == "Hoàn thành") { badgeClass = "status-completed"; }
    else if (status == "Đã hủy") { badgeClass = "status-cancelled"; }

    <span class="status @badgeClass">@status</span>
}
<h2 class="section-title">@ViewBag.Title</h2>

<div class="contact-page-wrapper">

    <div class="product-section">
        <div class="contact-form-container">

            @using (Html.BeginForm("UpdateProfile", "Account", FormMethod.Post, new { @class = "contact-form" }))
            {
                @Html.AntiForgeryToken()

                @Html.HiddenFor(m => m.CustomerInfo.MAKH)
                @Html.HiddenFor(m => m.CustomerInfo.EMAIL)
                @Html.HiddenFor(m => m.CustomerInfo.MATKHAU)
                @Html.HiddenFor(m => m.CustomerInfo.NGAYTAO)

                <h3 class="form-title" style="text-align: left; margin-bottom: 2rem;">
                    <i class="fa-solid fa-user" style="color: var(--color-primary);"></i>
                    Hồ sơ của bạn
                </h3>

                <div class="form-group">
                    <label>Họ và Tên</label>
                    @Html.EditorFor(m => m.CustomerInfo.HOTEN, new { htmlAttributes = new { @class = "form-group-input" } })
                </div>

                <div class="form-group">
                    <label>Email (Không thể thay đổi)</label>
                    <input type="email" value="@Model.CustomerInfo.EMAIL" class="form-group-input" readonly />
                </div>

                <div class.="form-group">
                    <label>Số điện thoại</label>
                    @Html.EditorFor(m => m.CustomerInfo.SODT, new { htmlAttributes = new { @class = "form-group-input", type = "tel" } })
                </div>

                <div class="form-group">
                    <label>Địa chỉ</label>
                    @Html.TextAreaFor(m => m.CustomerInfo.DIACHI, 3, 30, new { @class = "form-group-input" })
                </div>

                <div class="form-actions-container" style="justify-content: space-between; margin-top: 1.5rem;">
                    <button type="submit" class="btn-primary-admin">
                        <i class="fa-solid fa-save"></i> Lưu Thay đổi
                    </button>

                    <a href="@Url.Action("Logout", "Account")" class="cart-button" style="text-decoration: none;">
                        <i class="fa-solid fa-sign-out-alt"></i> Đăng xuất
                    </a>
                </div>
            }
        </div>
    </div>

    <div class="product-section">
        <h3 class.="summary-title" style="text-align: left; margin-bottom: 1.5rem;">
            <i class="fa-solid fa-history"></i> Lịch sử Đơn hàng
        </h3>

        <div class="order-history-list">
            @if (Model.OrderHistory.Count == 0)
            {
                <p>Bạn chưa có đơn hàng nào.</p>
            }

            @foreach (var order in Model.OrderHistory)
            {
                <div class="order-history-item">
                    <div class="order-info">
                        <span class.="order-id">Đơn hàng: <strong>#@order.MAHD</strong></span>
                        <span class="order-date">@order.NGAYLAP.Value.ToString("dd/MM/yyyy")</span>
                    </div>
                    <div class.="order-status">
                        @RenderStatusBadge(order.TRANGTHAI)
                    </div>
                    <div class="order-total">
                        @order.TONG_THANHTOAN.Value.ToString("N0") ₫
                    </div>
                </div>
            }
        </div>
    </div>

</div>