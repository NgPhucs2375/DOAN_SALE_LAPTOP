@model IEnumerable<DOAN_SALE_LAPTOP.Models.Laptop>

@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<div class="container mt-4">
    <h2 class="text-center mb-4 animate__animated animate__fadeInDown">
        <i class="fa-solid fa-laptop-code"></i> Danh sách Laptop
    </h2>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4 animate__animated animate__fadeInUp">
                <div class="card h-100 shadow-sm border-0 rounded-3">
                    <img src="~/Content/Images/@item.HinhAnh" class="card-img-top" alt="@item.NameLaptop" style="height:250px; object-fit:cover;">
                    <div class="card-body text-center">
                        <h5 class="card-title">@item.NameLaptop</h5>
                        <p class="text-muted">@item.GraphLaptop</p>
                        <h6 class="text-danger fw-bold">@String.Format("{0:N0} VNĐ", item.PriceLaptop)</h6>
                        <a href="@Url.Action("Details", "Home", new { id = item.IDLaptop })" class="btn btn-primary mt-2">
                            <i class="fa-solid fa-circle-info"></i> Xem chi tiết
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
