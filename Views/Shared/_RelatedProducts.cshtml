@model IEnumerable<DOAN_SALE_LAPTOP.Models.Laptop>

@if (Model != null && Model.Any())
{
    <div class="mt-5">
        <h4 class="mb-3"><i class="fa-solid fa-link"></i> S?n ph?m liên quan</h4>
        <div class="row">
            @foreach (var p in Model)
            {
                <div class="col-md-3 mb-4">
                    <div class="card h-100 shadow-sm border-0 rounded-3">
                        <a href="@Url.Action("Details", "Home", new { id = p.IDLaptop })" class="text-decoration-none">
                            <img src="~/Content/Images/@p.HinhAnh" class="card-img-top" alt="@p.NameLaptop" style="height:180px; object-fit:cover;">
                            <div class="card-body text-center">
                                <h6 class="card-title text-dark text-truncate" title="@p.NameLaptop">@p.NameLaptop</h6>
                                <div class="text-danger fw-bold">@String.Format("{0:N0} VN?", p.PriceLaptop)</div>
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
}
