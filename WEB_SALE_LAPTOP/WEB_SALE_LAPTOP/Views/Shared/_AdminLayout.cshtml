@{
    Layout = null; /* Ngắt vòng lặp layout để tránh lỗi StackOverflow */
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Quản Trị Laptop Pro</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Poppins:wght@500;600;700&display=swap" rel="stylesheet">

    @Styles.Render("~/Content/css/admin")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    @Scripts.Render("~/bundles/modernizr")

    <style>
        body, h1, h2, h3, h4, h5, h6,
        p, a, span, li, div, label,
        input, button, select, textarea,
        .main-nav ul li a,
        .footer-section h3,
        .sidebar-title,
        .filter-group-title {
            font-family: 'Inter', sans-serif !important;
        }
        /* --- CSS CƠ BẢN CHO ADMIN LAYOUT --- */
        :root {
            --admin-bg: #f3f4f6;
            --sidebar-bg: #ffffff;
            --header-bg: rgba(255, 255, 255, 0.8);
            --primary-color: #003049;
            --accent-color: #B3404A;
            --text-dark: #1f2937;
            --text-light: #6b7280;
            --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
        }

        body {
            background-color: var(--admin-bg);
            font-family: 'Inter', sans-serif;
        }

        /* SIDEBAR */
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            bottom: 0;
            width: 260px;
            background: var(--sidebar-bg);
            border-right: 1px solid #e5e7eb;
            z-index: 50;
            transition: all 0.3s ease;
            display: flex;
            flex-direction: column;
        }

        .logo-container {
            height: 70px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-bottom: 1px solid #f0f0f0;
        }

        .logo-text {
            font-family: 'Poppins', sans-serif;
            color: var(--primary-color);
            font-size: 1.4rem;
            font-weight: 700;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .sidebar-content {
            flex: 1;
            overflow-y: auto;
            padding: 15px;
        }

        .sidebar-menu ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .sidebar-menu li {
            margin-bottom: 5px;
        }

        .sidebar-menu a {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px 15px;
            color: var(--text-light);
            text-decoration: none;
            border-radius: 8px;
            font-weight: 500;
            transition: 0.2s;
        }

            .sidebar-menu a:hover, .sidebar-menu a.active {
                background-color: #f0f9ff;
                color: var(--primary-color);
            }

            .sidebar-menu a i {
                width: 20px;
                text-align: center;
            }

        /* MAIN CONTENT */
        .main-content-wrapper {
            margin-left: 260px;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            transition: all 0.3s ease;
        }

        /* HEADER */
        .main-header {
            height: 70px;
            background: var(--header-bg);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(0,0,0,0.05);
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 30px;
            position: sticky;
            top: 0;
            z-index: 40;
        }

        /* BODY */
        .page-content {
            padding: 30px;
            flex: 1;
        }

        /* FOOTER */
        .main-footer {
            padding: 20px;
            text-align: center;
            font-size: 0.85rem;
            color: #999;
            border-top: 1px solid #eee;
        }

        /* --- XỬ LÝ THU GỌN SIDEBAR --- */
        body.sidebar-collapsed .sidebar {
            width: 80px;
        }

        body.sidebar-collapsed .main-content-wrapper {
            margin-left: 80px;
        }

        body.sidebar-collapsed .logo-text span,
        body.sidebar-collapsed .sidebar-menu span {
            display: none;
        }

        body.sidebar-collapsed .logo-container {
            justify-content: center;
        }

        body.sidebar-collapsed .sidebar-menu a {
            justify-content: center;
            padding: 15px 0;
        }

            body.sidebar-collapsed .sidebar-menu a i {
                margin: 0;
                font-size: 1.4rem;
            }

            /* Tooltip khi thu gọn */
            body.sidebar-collapsed .sidebar-menu a:hover {
                position: relative;
            }

                body.sidebar-collapsed .sidebar-menu a:hover::after {
                    content: attr(title); /* Lấy title làm tooltip */
                    position: absolute;
                    left: 70px;
                    top: 50%;
                    transform: translateY(-50%);
                    background: #333;
                    color: #fff;
                    padding: 5px 10px;
                    border-radius: 4px;
                    font-size: 0.8rem;
                    white-space: nowrap;
                    z-index: 100;
                }
    </style>
    @RenderSection("styles", required: false)
</head>
<body>

    <aside class="sidebar">
        <div class="logo-container" id="sidebarToggle" style="cursor: pointer;">
            <div class="logo-text">
                <i class="fa-solid fa-shield-halved"></i>
                <span>Laptop Pro</span>
            </div>
        </div>

        <div class="sidebar-content">
            <nav class="sidebar-menu">
                <ul>
                    <li style="padding: 0 15px; font-size: 0.75rem; color: #ccc; font-weight: 700; margin-bottom: 10px; text-transform: uppercase;">
                        <span>Quản trị</span>
                    </li>

                    @{
                        var dsQuyen = Session["AdminQuyen"] as List<int> ?? new List<int>();
                        string currentController = ViewContext.RouteData.Values["controller"].ToString();
                    }

                    @if (dsQuyen.Contains(1))
                    {
                        <li>
                            <a href="@Url.Action("Index", "Revenue")" class="@(currentController == "Revenue" ? "active" : "")" title="Báo cáo Doanh thu">
                                <i class="fa-solid fa-chart-pie"></i>
                                <span>Dashboard</span>
                            </a>
                        </li>
                    }

                    @if (dsQuyen.Contains(1) || dsQuyen.Contains(3))
                    {
                        <li>
                            <a href="@Url.Action("Index", "ProductManagement")" class="@(currentController == "ProductManagement" ? "active" : "")" title="Sản phẩm">
                                <i class="fa-solid fa-laptop"></i>
                                <span>Sản phẩm</span>
                            </a>
                        </li>
                    }

                    @if (dsQuyen.Contains(1) || dsQuyen.Contains(3))
                    {
                        <li>
                            <a href="@Url.Action("Index", "CategoryManagement")" class="@(currentController == "CategoryManagement" ? "active" : "")" title="Loại Laptop">
                                <i class="fa-solid fa-layer-group"></i>
                                <span>Loại Laptop</span>
                            </a>
                        </li>
                    }

                    @if (dsQuyen.Contains(1) || dsQuyen.Contains(2))
                    {
                        <li>
                            <a href="@Url.Action("Index", "OrderManagement")" class="@(currentController == "OrderManagement" ? "active" : "")" title="Đơn hàng">
                                <i class="fa-solid fa-cart-shopping"></i>
                                <span>Đơn hàng</span>
                            </a>
                        </li>
                    }

                    @if (dsQuyen.Contains(1) || dsQuyen.Contains(2))
                    {
                        <li>
                            <a href="@Url.Action("Index", "VoucherManagement")" class="@(currentController == "VoucherManagement" ? "active" : "")" title="Voucher">
                                <i class="fa-solid fa-ticket"></i>
                                <span>Khuyến mãi</span>
                            </a>
                        </li>
                    }

                    @if (dsQuyen.Contains(1))
                    {
                        <li>
                            <a href="@Url.Action("Index", "CustomerManagement")" class="@(currentController == "CustomerManagement" ? "active" : "")" title="Khách hàng">
                                <i class="fa-solid fa-users"></i>
                                <span>Khách hàng</span>
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    </aside>

    <div class="main-content-wrapper">

        <header class="main-header">
            <button id="mobileToggle" style="background:none; border:none; font-size:1.5rem; cursor:pointer;">
                <i class="fa-solid fa-bars"></i>
            </button>

            <div style="display: flex; align-items: center; gap: 15px;">
                <div style="text-align: right;">
                    <div style="font-weight: 600; font-size: 0.9rem;">
                        @(Session["AdminName"] ?? "Admin")
                    </div>
                    <div style="font-size: 0.75rem; color: #888;">Quản trị viên</div>
                </div>
                <div style="width: 40px; height: 40px; background: var(--primary-color); color: white; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: bold;">
                    A
                </div>
                <a href="@Url.Action("Logout", "AdminAccount")" title="Đăng xuất" style="color: var(--accent-color);">
                    <i class="fa-solid fa-right-from-bracket"></i>
                </a>
            </div>
        </header>

        <main class="page-content">
            @RenderBody()
        </main>

        <footer class="main-footer">
            &copy; @DateTime.Now.Year <strong>Laptop Pro Admin System</strong>.
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)

    <script>
        // Script đóng mở Sidebar
        $(document).ready(function () {
            $('#sidebarToggle, #mobileToggle').click(function () {
                $('body').toggleClass('sidebar-collapsed');
            });
        });
    </script>
</body>
</html>