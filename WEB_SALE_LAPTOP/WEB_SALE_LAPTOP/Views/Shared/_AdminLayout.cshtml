<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Admin Panel</title>

    <link href="~/Content/css/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <aside class="sidebar">
        <div class="logo-container" role="button" title="Ẩn/hiện menu">
            <a class="logo-text">
                <i class="fa-solid fa-user-shield"></i>
                <span>Admin Panel</span>
            </a>
            <i class="fa-solid fa-angles-left collapse-icon"></i>
        </div>

        <div class="sidebar-content">
            <nav class="sidebar-menu">
                <ul>
                    <li>
                        <a href="@Url.Action("Index", "ProductManagement")">
                            <i class="fa-solid fa-box-archive"></i>
                            <span>Quản lý Sản phẩm</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "OrderManagement")">
                            <i class="fa-solid fa-file-invoice-dollar"></i>
                            <span>Quản lý Đơn hàng</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "CustomerManagement")">
                            <i class="fa-solid fa-users"></i>
                            <span>Quản lý Khách hàng</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "VoucherManagement")">
                            <i class="fa-solid fa-ticket"></i>
                            <span>Quản lý Voucher</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </aside>

    <div class="main-content-wrapper">

        <header class="main-header">
            <div class="header-main">
                <div class="container-fluid header-main-content">

                    <nav class="main-nav">
                        <h3 class="admin-page-title">@ViewBag.Title</h3>
                    </nav>

                    <div class="header-actions">
                        <a class.="btn-primary-admin" href="@Url.Action("Index", "Home")" target="_blank">
                            <i class="fa-solid fa-globe"></i>
                            <span>Xem Website</span>
                        </a>
                        <a class="cart-button" href="@Url.Action("Logout", "AdminAccount")">
                            <i class="fa-solid fa-sign-out-alt"></i>
                            <span>Đăng xuất</span>
                        </a>
                    </div>
                </div>
            </div>
        </header>

        <main class="page-content">
            @RenderBody()
        </main>

        <footer class="main-footer">
            <div class="footer-bottom" style="background-color: var(--bg-main); border-top: 1px solid var(--border-color);">
                <p style="color: var(--text-muted);">&copy; @DateTime.Now.Year Laptop Pro Admin Panel.</p>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/js/Site.js"></script>

</body>
</html>