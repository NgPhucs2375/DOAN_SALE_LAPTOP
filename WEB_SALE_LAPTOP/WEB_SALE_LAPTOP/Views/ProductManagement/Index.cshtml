@model IEnumerable<WEB_SALE_LAPTOP.Models.LAPTOP>

@{
    ViewBag.Title = "Quản lý Sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Đảm bảo bạn dùng Layout chung
    string imagePathPrefix = "/Content/images/";
}

<div class="container-fluid mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="mb-0">@ViewBag.Title</h2>
                @Html.ActionLink(" Tạo sản phẩm mới", "Create", "ProductManagement", null, new { @class = "btn btn-success" })
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Ảnh</th>
                            <th>Tên Laptop</th>
                            <th>Hãng</th>
                            <th>Loại</th>
                            <th>Giá bán</th>
                            <th>Tồn kho</th>
                            <th>Trạng thái</th>
                            <th style="width: 150px;">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="@Url.Content(imagePathPrefix + (item.HINHANH0 ?? "default-image.png"))"
                                         alt="Ảnh @item.TENLAPTOP"
                                         style="width: 80px; height: 80px; object-fit: contain; border-radius: 4px;" />
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.TENLAPTOP)</td>
                                <td>@Html.DisplayFor(modelItem => item.HANG.TENHANG)</td>
                                <td>@Html.DisplayFor(modelItem => item.LOAI_LAPTOP.TENLOAI)</td>
                                <td>@item.GIA_BAN.ToString("N0")đ</td>
                                <td>@Html.DisplayFor(modelItem => item.SOLUONG_TON)</td>
                                <td>
                                    @if (item.TRANGTHAI == true)
                                    {
                                        <span class="badge bg-success">Đang kinh doanh</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Ngừng kinh doanh</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        @Html.ActionLink("Sửa", "Edit", new { id = item.MALAPTOP }, new { @class = "btn btn-sm btn-primary" })
                                        @Html.ActionLink("Xóa", "Delete", new { id = item.MALAPTOP }, new { @class = "btn btn-sm btn-danger" })
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>