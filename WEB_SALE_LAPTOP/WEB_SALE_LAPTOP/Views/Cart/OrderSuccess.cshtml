@{
    ViewBag.Title = "Đặt hàng thành công";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles {
    @Styles.Render("~/Content/css/checkout")
}
<div class="product-section order-success-page">

    <div class="success-icon">
        <i class="fa-solid fa-circle-check"></i>
    </div>

    <h2 class="section-title" style="border: none; margin-bottom: 1rem;">
        Đặt hàng thành công!
    </h2>

    <p class="success-lead">
        Cảm ơn bạn đã mua hàng tại Laptop Pro.
    </p>
    <p class="success-message">
        Chúng tôi sẽ xử lý đơn hàng của bạn và liên hệ với bạn qua số điện thoại đã cung cấp trong thời gian sớm nhất.
    </p>

    <a href="@Url.Action("Index", "Home")" class="cart-button" style="text-decoration: none; max-width: 300px; justify-content: center;">
        <i class="fa-solid fa-arrow-left"></i>
        Tiếp tục mua sắm
    </a>
</div>

<script>
    // Chờ 10 giây rồi quay về trang chủ
    setTimeout(function () {
        window.location.href = '@Url.Action("Index", "Home")';
    }, 10000);
</script>