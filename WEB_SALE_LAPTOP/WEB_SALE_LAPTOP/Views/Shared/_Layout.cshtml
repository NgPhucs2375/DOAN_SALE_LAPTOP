                <div class="filter-group-content">
                    <nav class="sidebar-menu filter-menu">
                        <ul>
                            <li><a href="@Url.Action("TimKiemTheoGia", "Home", new { maxGia = 10000000 })">Dưới 10 triệu</a></li>
                            <li><a href="@Url.Action("TimKiemTheoGia", "Home", new { minGia = 10000000, maxGia = 15000000 })">10 - 15 triệu</a></li>
                            <li><a href="@Url.Action("TimKiemTheoGia", "Home", new { minGia = 15000000, maxGia = 20000000 })">15 - 20 triệu</a></li>
                            <li><a href="@Url.Action("TimKiemTheoGia", "Home", new { minGia = 20000000 })">Trên 20 triệu</a></li>
                        </ul>
                    </nav>
                </div>
            </div>

            <div class="filter-group">
                <div class="filter-group-title"><span><i class="fa-solid fa-microchip"></i> Cấu Hình</span><i class="fa-solid fa-chevron-down arrow"></i></div>
                <div class="filter-group-content">
                    <nav class="sidebar-menu filter-menu">
                        <ul>
                            <li><a href="@Url.Action("TimKiemTheoCPU", "Home", new { cpuKey = "i5" })">Core i5 / Ryzen 5</a></li>
                            <li><a href="@Url.Action("TimKiemTheoCPU", "Home", new { cpuKey = "i7" })">Core i7 / Ryzen 7</a></li>
                            <li><a href="@Url.Action("TimKiemTheoCPU", "Home", new { cpuKey = "rtx" })">Card rời RTX</a></li>
