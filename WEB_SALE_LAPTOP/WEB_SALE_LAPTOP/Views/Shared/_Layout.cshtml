<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Laptop Store Pro</title>

    <link href="~/Content/css/style.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <aside class="sidebar">
        <div class="logo-container" role="button" title="Ẩn/hiện menu">
            <a class="logo-text">
                <i class="fa-solid fa-laptop"></i>
                <span>Laptop Pro</span>
            </a>
            <i class="fa-solid fa-angles-left collapse-icon"></i>
        </div>

        <div class="sidebar-content">
            <div class="filter-group active">
                <div class="filter-group-title">
                    <span><i class="fa-solid fa-tags"></i> Danh Mục Sản Phẩm</span>
                    <i class="fa-solid fa-chevron-down arrow"></i>
                </div>
                <div class="filter-group-content">
                    @{ Html.RenderAction("DSMenu_Hang", "Home"); }
                </div>
            </div>

            <div class="filter-group">
                <div class="filter-group-title">
                    <span><i class="fa-solid fa-dollar-sign"></i> Lọc Theo Giá</span>
                    <i class="fa-solid fa-chevron-down arrow"></i>
                </div>
                <div class="filter-group-content">
                    <nav class="sidebar-menu filter-menu">
                        <ul>
                            <li><a href="@Url.Action("TimKiemTheoGia", "Home", new { minGia = (decimal?)null, maxGia = 10000000 })">Dưới 10 triệu</a></li>

                            <li><a href="@Url.Action("TimKiemTheoGia", "Home", new { minGia = 10000000, maxGia = 15000000 })">Từ 10 - 15 triệu</a></li>
                            <li><a href="@Url.Action("TimKiemTheoGia", "Home", new { minGia = 15000000, maxGia = 20000000 })">Từ 15 - 20 triệu</a></li>

                            <li><a href="@Url.Action("TimKiemTheoGia", "Home", new { minGia = 20000000, maxGia = (decimal?)null })">Trên 20 triệu</a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        
            <div class="filter-group">
                <div class="filter-group-title">
                    <span><i class="fa-solid fa-microchip"></i> Lọc Theo CPU</span>
                    <i class="fa-solid fa-chevron-down arrow"></i>
                </div>
                <div class="filter-group-content">
                    <nav class="sidebar-menu filter-menu">
                        <ul>
                            <li><a href="@Url.Action("TimKiemTheoCPU", "Home", new { cpuKey = "i5" })">Intel Core i5</a></li>
                            <li><a href="@Url.Action("TimKiemTheoCPU", "Home", new { cpuKey = "i7" })">Intel Core i7</a></li>
                            <li><a href="@Url.Action("TimKiemTheoCPU", "Home", new { cpuKey = "ryzen 5" })">AMD Ryzen 5</a></li>
                            <li><a href="@Url.Action("TimKiemTheoCPU", "Home", new { cpuKey = "ryzen 7" })">AMD Ryzen 7</a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
        
        <a href="@Url.Action("TimKiemTheoLoai", "Home", new { tenLoai = "Laptop Gaming" })" class="sidebar-promo-link-wrapper">

            <div class="sidebar-promo-card">
                <div class="promo-badge">Giảm Sốc</div>
                <h4 class="promo-title">Nhập 'HELLOVN'</h4>
                <p class="promo-desc">Giảm ngay 10% cho đơn hàng đầu tiên của bạn!</p>
                <a href="#" class="promo-link">Tìm hiểu ngay &raquo;</a>
            </div>

        </a>
    </aside>

    <div class="main-content-wrapper">

        <header class="main-header">
            <div class="header-top-bar">
                <div class="container-fluid">
                    <span><i class="fa-solid fa-bolt"></i> Ưu đãi chớp nhoáng mỗi ngày!</span>
                    <nav class="top-nav">
                        <ul>
                            @if (Session["AdminUser"] != null)
                            {
                                <li><a href="#"><i class="fa-solid fa-user-shield"></i> Chào @Session["AdminName"]</a></li>
                                <li>@Html.ActionLink("Quản lý", "Index", "ProductManagement", null, new { @class = "nav-link" })</li>
                            }
                            else if (Session["UserCustomer"] != null)
                            {
                                <li><a href="#"><i class="fa-solid fa-user"></i> Chào @Session["UserName"]</a></li>
                            }
                            else
                            {
                                <li>@Html.ActionLink("Đăng ký", "Register", "Account", null, new { @class = "nav-link" })</li>
                                <li>@Html.ActionLink("Đăng nhập", "Login", "Account", null, new { @class = "nav-link" })</li>
                            }
                        </ul>
                    </nav>
                </div>
            </div>

            <div class="header-main">
                <div class="container-fluid header-main-content">

                    <nav class="main-nav">
                        <ul>
                            <li>@Html.ActionLink("Trang Chủ", "Index", "Home")</li>

                            <li class="main-nav-dropdown">
                                <a href="#">Sản Phẩm <i class="fa-solid fa-chevron-down arrow-small"></i></a>
                                <ul class="main-nav-dropdown-menu">
                                    <li><a href="@Url.Action("TimKiemTheoLoai", "Home", new { tenLoai = "Laptop Gaming" })">Laptop Gaming</a></li>
                                    <li><a href="@Url.Action("TimKiemTheoLoai", "Home", new { tenLoai = "Laptop Văn phòng" })">Laptop Văn Phòng</a></li>
                                    <li><a href="@Url.Action("TimKiemTheoLoai", "Home", new { tenLoai = "Macbook" })">MacBook</a></li>
                                    <li><a href="@Url.Action("TimKiemTheoLoai", "Home", new { tenLoai = "Laptop Đồ họa - Kỹ thuật" })">Đồ họa - Kỹ thuật</a></li>
                                </ul>
                            </li>

                            <li><a href="@Url.Action("About","Home")">Liên Hệ</a></li>
                        </ul>
                    </nav>

                    <div class="search-container">
                        @using (Html.BeginForm("TimKiem", "Home", FormMethod.Get, new { @class = "search-form" }))
                        {
                            <button class="btn-search" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
                            <input class="search-box" type="search" name="tuKhoa" placeholder="Tìm kiếm laptop, CPU, RAM..." value="@ViewBag.TuKhoa">
                        }
                    </div>

                    <div class="header-actions">
                        <a class="cart-button" href="@Url.Action("Index", "Cart")">
                            <i class="fa-solid fa-cart-shopping"></i>
                            <span>Giỏ hàng</span>
                            @{ Html.RenderAction("_CartIcon", "Cart"); }
                        </a>
                    </div>
                </div>
            </div>
        </header>

        <main class="page-content">
            @RenderBody()
        </main>

        <footer class="main-footer">
            <div class="container-fluid">
                <div class="footer-newsletter">
                    <h3>Đăng ký nhận tin</h3>
                    <p>Nhận thông tin về sản phẩm mới và khuyến mãi đặc biệt.</p>
                    <form class="newsletter-form">
                        <input type="email" placeholder="Email của bạn...">
                        <button type="submit">Đăng ký</button>
                    </form>
                </div>

                <div class="footer-content">
                    <div class="footer-section">
                        <h3>Thông Tin Liên Hệ</h3>
                        <p>Địa chỉ: 123 Đường ABC, Quận XYZ, TP. Hồ Chí Minh</p>
                        <p>Điện thoại: (0123) 456-789</p>
                        <p>Email: contact@laptoppro.com</p>
                    </div>
                    <div class="footer-section">
                        <h3>Liên Kết Nhanh</h3>
                        <a href="#">Chính sách bảo hành</a>
                        <a href="#">Chính sách đổi trả</a>
                        <a href="#">Câu hỏi thường gặp</a>
                        <a href="#">Về chúng tôi</a>
                    </div>
                    <div class="footer-section">
                        <h3>Theo Dõi Chúng Tôi</h3>
                        <div class="social-icons">
                            <a href="#"><i class="fa-brands fa-facebook-f"></i></a>
                            <a href="#"><i class="fa-brands fa-youtube"></i></a>
                            <a href="#"><i class="fa-brands fa-instagram"></i></a>
                            <a href="#"><i class="fa-brands fa-tiktok"></i></a>
                        </div>
                    </div>
                </div>

                <div class="footer-bottom">
                    <p>&copy; @DateTime.Now.Year Laptop Pro. Đã đăng ký bản quyền.</p>
                    <div class="payment-icons">
                        <i class="fa-brands fa-cc-visa fa-2x"></i>
                        <i class="fa-brands fa-cc-mastercard fa-2x"></i>
                        <i class="fa-solid fa-qrcode fa-2x"></i>
                    </div>
                </div>
            </div>
        </footer>
    </div> @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

<script src="~/Scripts/js/Site.js"></script>

</body>
</html>