<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Laptop Store Pro</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    @Styles.Render("~/Content/css/public")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    @Scripts.Render("~/bundles/modernizr")

<style>
        :root {
            --header-height: 80px;
            --primary-color: #003049;
            --accent-color: #B3404A;
        }

        body {
            font-family: 'Inter', sans-serif;
        }
        .main-header {
            position: sticky;
            top: 0;
            z-index: 1000;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            box-shadow: 0 2px 15px rgba(0,0,0,0.05);
            transition: transform 0.3s ease;
        }

            .main-header.hide {
                transform: translateY(-100%);
            }
        .header-main {
            padding: 1rem 0;
        }

        .header-main-content {
            display: flex; /* Dùng Flexbox thay vì Grid */
            align-items: center;
            justify-content: space-between; /* Dãn đều các phần tử */
            gap: 20px;
            flex-wrap: nowrap; /* Không cho phép xuống dòng */
        }
        /* Ẩn khi cuộn xuống */

        /* 2. MEGA MENU */
        .main-nav-dropdown-menu {
            min-width: 250px;
            border: none;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            border-radius: 12px;
            padding: 10px;
            margin-top: 15px;
            opacity: 0;
            visibility: hidden;
            transform: translateY(10px);
            transition: all 0.3s ease;
            position: absolute; /* Đảm bảo menu con không đẩy nội dung */
            background: white;
        }

        .main-nav-dropdown:hover .main-nav-dropdown-menu {
            opacity: 1;
            visibility: visible;
            transform: translateY(0);
        }

        .main-nav-dropdown-menu li a {
            padding: 10px 15px;
            border-radius: 8px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .main-nav-dropdown-menu li a:hover {
                background: #f0f9ff;
                color: var(--primary-color);
            }

            .main-nav-dropdown-menu li a i {
                width: 20px;
                text-align: center;
                color: var(--accent-color);
                opacity: 0.7;
            }
        .main-nav {
            flex-shrink: 0;
        }

            .main-nav ul {
                display: flex;
                list-style: none;
                gap: 20px;
                margin: 0;
                padding: 0;
            }

                .main-nav ul li {
                    white-space: nowrap;
                }

                    .main-nav ul li a {
                        font-size: 1rem;
                        font-weight: 600;
                        color: #333;
                        text-decoration: none;
                        transition: color 0.3s;
                    }

                        .main-nav ul li a:hover {
                            color: var(--accent-color);
                        }
        /* 3. SEARCH BAR */
        .search-form {
            display: flex;
            align-items: center;
            width: 100%;
            background: #f3f4f6;
            border: 2px solid transparent;
            border-radius: 50px;
            transition: all 0.3s;
        }

            .search-form:focus-within {
                background: #fff;
                border-color: var(--primary-color);
                box-shadow: 0 0 0 4px rgba(0, 48, 73, 0.1);
            }

        .search-box {
            width: 100%;
            border: none;
            outline: none;
            padding: 10px;
            font-size: 0.95rem;
            background: transparent;
        }

        .btn-search {
            border: none;
            background: transparent;
            padding: 0 15px;
            cursor: pointer;
            color: #666;
        }
        .search-container {
            flex-grow: 1; /* Chiếm khoảng trống còn lại */
            max-width: 600px; /* Giới hạn chiều rộng tối đa */
            min-width: 200px;
        }
        /* 4. BACK TO TOP BUTTON */
        #back-to-top {
            position: fixed;
            bottom: 90px;
            right: 30px;
            width: 45px;
            height: 45px;
            background: var(--primary-color);
            color: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s;
            z-index: 990;
            box-shadow: 0 4px 10px rgba(0,0,0,0.2);
        }

            #back-to-top.show {
                opacity: 1;
                visibility: visible;
                transform: translateY(0);
            }

            #back-to-top:hover {
                transform: translateY(-5px);
                background: var(--accent-color);
            }
        .header-actions {
            flex-shrink: 0;
        }

        .cart-button {
            background-color: var(--accent-color);
            color: white;
            text-decoration: none;
            padding: 10px 20px;
            border-radius: 25px;
            display: flex;
            align-items: center;
            gap: 8px;
            font-weight: 600;
            transition: all 0.3s;
            white-space: nowrap;
            box-shadow: 0 4px 10px rgba(179, 64, 74, 0.3);
        }

            .cart-button:hover {
                background-color: #9a363f;
                transform: translateY(-2px);
            }

        /* SIDEBAR IMPROVEMENT */
        .sidebar {
            box-shadow: 2px 0 15px rgba(0,0,0,0.03);
            border-right: none;
        }

        .sidebar-promo-card {
            border: none;
            background: linear-gradient(135deg, var(--primary-color), #001d2e);
        }


        /* FOOTER IMPROVEMENT */
        .main-footer {
            background: #0f172a;
            color: #cbd5e1;
            padding-top: 4rem;
        }

        .footer-section h3 {
            color: #fff;
            font-size: 1.1rem;
            margin-bottom: 1.5rem;
            position: relative;
        }

            .footer-section h3::after {
                content: '';
                position: absolute;
                bottom: -8px;
                left: 0;
                width: 40px;
                height: 3px;
                background: var(--accent-color);
                border-radius: 2px;
            }

        .footer-section a {
            color: #94a3b8;
        }

            .footer-section a:hover {
                color: #fff;
                padding-left: 5px;
            }/* RESPONSIVE CHO HEADER */
        @@media (max-width: 992px) {
            .header-main-content { flex-wrap: wrap; gap: 15px; }
            .main-nav { order: 2; width: 100%; overflow-x: auto; padding-bottom: 5px; } /* Cho phép trượt ngang */
            .search-container { order: 1; max-width: 100%; }
            .header-actions { display: none; } /* Ẩn nút giỏ hàng to trên mobile */
        }
</style>

    @RenderSection("styles", required: false)
</head>
<body>

    <aside class="sidebar">
        <div class="logo-container" role="button" title="Ẩn/hiện menu">
            <a class="logo-text" href="@Url.Action("Index", "Home")">
                <i class="fa-solid fa-laptop-code" style="color: var(--accent-color);"></i>
