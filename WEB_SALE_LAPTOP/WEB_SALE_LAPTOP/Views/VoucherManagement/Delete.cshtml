@model WEB_SALE_LAPTOP.Models.VOUCHER
@{
    ViewBag.Title = "Xóa Voucher";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="min-height: 80vh; display: flex; justify-content: center; align-items: center;">
    <div class="table-card animate__animated animate__zoomIn" style="width: 100%; max-width: 500px; text-align: center; padding: 40px; border-top: 6px solid var(--wine-red);">

        <div style="width: 100px; height: 100px; background: #fff0f0; color: var(--wine-red); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 20px; font-size: 3rem;">
            <i class="fa-regular fa-trash-can"></i>
        </div>

        <h2 style="color: #1f2937; margin-bottom: 10px;">Xác nhận xóa?</h2>
        <p style="color: #6b7280; margin-bottom: 30px;">Bạn có chắc chắn muốn xóa Voucher <strong>@Model.MAVOUCHER</strong> không? Hành động này không thể hoàn tác.</p>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger animate__animated animate__headShake" style="background: #fef2f2; border: 1px solid #fca5a5; color: #b91c1c; padding: 15px; border-radius: 8px; margin-bottom: 20px; text-align: left; font-size: 0.9rem;">
                <strong><i class="fa-solid fa-circle-xmark"></i> Không thể xóa!</strong><br>
                @ViewBag.Error
                <br><br>
                <em>Gợi ý: Thay vì xóa, hãy sửa "Ngày kết thúc" về quá khứ để ngừng hiệu lực voucher này.</em>
            </div>
        }

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div style="display: flex; gap: 15px; justify-content: center;">
                <a href="@Url.Action("Index")" style="padding: 12px 25px; background: #f3f4f6; color: #4b5563; border-radius: 50px; font-weight: 600;">
                    Quay lại
                </a>

                @if (ViewBag.Error == null)
                {
                    <button type="submit" class="btn-wine" style="background: var(--wine-red); box-shadow: none;">
                        Xác nhận Xóa
                    </button>
                }
            </div>
        }
    </div>
</div>