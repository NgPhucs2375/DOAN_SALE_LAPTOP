
@{
    ViewBag.Title = "Đặt hàng thành công";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2 text-center">
            <div class="alert alert-success p-5 shadow-sm">
                <h1 class="display-4">✅ Đặt hàng thành công!</h1>
                <p class="lead">
                    Cảm ơn bạn đã mua hàng tại Laptop Store.
                </p>
                <hr class="my-4">
                <p>
                    Chúng tôi sẽ xử lý đơn hàng của bạn và liên hệ với bạn qua số điện thoại đã cung cấp trong thời gian sớm nhất.
                </p>
                <p class="lead">
                    @Html.ActionLink("Tiếp tục mua sắm", "Index", "Home", null, new { @class = "btn btn-primary btn-lg" })
                </p>
            </div>
        </div>
    </div>
</div>

<script>
    setTimeout(function () {
        window.location.href = '@Url.Action("Index", "Home")';
    }, 10000); 
</script>