@{
    ViewBag.Title = "Wine Red Analytics Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Inter:wght@300;400;600;800&display=swap" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels"></script>

<style>
    body, h1, h2, h3, h4, h5, h6,
    p, a, span, li, div, label,
    input, button, select, textarea,
    .main-nav ul li a,
    .footer-section h3,
    .sidebar-title,
    .filter-group-title {
        font-family: 'Inter', sans-serif !important;
    }
    /* --- BẢNG MÀU RƯỢU VANG SANG TRỌNG --- */
    :root {
        --wine-dark: #4a0404;      /* Đỏ đen */
        --wine-main: #722F37;      /* Đỏ rượu vang chuẩn */
        --wine-light: #9e4751;     /* Đỏ nhạt */
        --gold-accent: #d4af37;    /* Vàng kim */
        --glass-bg: rgba(255, 255, 255, 0.9);
        --text-dark: #2c1810;
        --bg-body: #fdfcfc;
    }

    .revenue-dashboard {
        font-family: 'Inter', sans-serif;
        color: var(--text-dark);
        padding-bottom: 50px;
    }

    /* 1. HEADER: Sang trọng, quyền lực */
    .dashboard-header {
        display: flex; justify-content: space-between; align-items: center;
        margin-bottom: 30px;
        padding: 25px 40px;
        background: linear-gradient(135deg, var(--wine-dark), var(--wine-main));
        border-radius: 20px;
        box-shadow: 0 15px 40px -10px rgba(114, 47, 55, 0.5);
        color: white;
        position: relative;
        overflow: hidden;
    }

    .header-content h2 {
        font-family: 'Playfair Display', serif; /* Font kiểu tạp chí */
        font-size: 2.2rem; margin: 0;
        background: linear-gradient(to right, #fff, #e0c3fc);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    /* Họa tiết nền */
    .header-bg-pattern {
        position: absolute; top: -50%; right: -10%; width: 300px; height: 300px;
        background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
        border-radius: 50%; pointer-events: none;
    }

    /* Select Năm Style Gold */
    .year-selector {
        background: rgba(0,0,0,0.3);
        border: 1px solid var(--gold-accent);
        color: var(--gold-accent);
        padding: 10px 20px;
        border-radius: 30px;
        font-weight: 600;
        cursor: pointer;
        outline: none;
        font-family: 'Inter', sans-serif;
        transition: 0.3s;
    }
    .year-selector:hover { background: var(--gold-accent); color: var(--wine-dark); }

    /* 2. THẺ CHỈ SỐ (KPI CARDS) - Chi tiết hơn */
    .kpi-grid {
        display: grid; grid-template-columns: repeat(4, 1fr); gap: 20px; margin-bottom: 30px;
    }

    .kpi-card {
        background: white; padding: 20px; border-radius: 16px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.05);
        border-left: 4px solid var(--wine-main);
        transition: transform 0.3s;
        position: relative;
        overflow: hidden;
    }
    .kpi-card:hover { transform: translateY(-5px); box-shadow: 0 15px 30px rgba(114, 47, 55, 0.15); }

    .kpi-title { font-size: 0.85rem; color: #888; text-transform: uppercase; letter-spacing: 0.5px; font-weight: 600; margin-bottom: 10px; }
    .kpi-value { font-size: 1.5rem; font-weight: 800; color: var(--wine-dark); }
    .kpi-sub { font-size: 0.8rem; margin-top: 5px; display: flex; align-items: center; gap: 5px; }
    .kpi-icon { position: absolute; right: 15px; top: 15px; font-size: 2rem; color: var(--wine-light); opacity: 0.1; }

    /* Màu sắc riêng cho từng thẻ */
    .kpi-trend-up { color: #10b981; }
    .kpi-trend-down { color: #ef4444; }

    /* 3. KHU VỰC BIỂU ĐỒ CHÍNH */
    .main-chart-section {
        background: white; border-radius: 20px; padding: 25px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.05);
        margin-bottom: 30px;
        border: 1px solid rgba(0,0,0,0.02);
    }
    .section-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px; }
    .section-title { font-weight: 700; font-size: 1.1rem; color: var(--wine-dark); display: flex; align-items: center; gap: 10px; }
    .section-title::before { content: ''; width: 4px; height: 20px; background: var(--wine-main); border-radius: 2px; }

    /* 4. GRID CHI TIẾT (Quarterly & Top Product) */
    .details-grid {
        display: grid; grid-template-columns: 1.5fr 1fr; gap: 25px;
    }

    .chart-box {
        background: white; border-radius: 20px; padding: 25px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.05);
    }

    /* Bảng xếp hạng Mini */
    .top-list { margin-top: 15px; }
    .top-item {
        display: flex; align-items: center; justify-content: space-between;
        padding: 12px 0; border-bottom: 1px dashed #eee;
    }
    .top-item:last-child { border-bottom: none; }
    .rank { width: 24px; height: 24px; border-radius: 50%; background: #f3f4f6; color: #666; font-size: 0.75rem; font-weight: 700; display: flex; justify-content: center; align-items: center; margin-right: 10px; }
    .rank-1 { background: var(--gold-accent); color: white; box-shadow: 0 4px 10px rgba(212, 175, 55, 0.4); }
    .prod-name { flex: 1; font-size: 0.9rem; font-weight: 600; color: #444; }
    .prod-val { font-weight: 700; color: var(--wine-main); font-size: 0.9rem; }

    /* Responsive */
    @@media (max-width: 1200px) {
        .kpi-grid { grid-template-columns: repeat(2, 1fr); }
        .details-grid { grid-template-columns: 1fr; }
    }
</style>

<div class="revenue-dashboard animate__animated animate__fadeIn">

    <div class="dashboard-header">
        <div class="header-bg-pattern"></div>
        <div class="header-content">
            <h2>Business Intelligence</h2>
            <p style="margin: 5px 0 0; opacity: 0.9;">Tổng quan hiệu suất kinh doanh & Tăng trưởng</p>
        </div>
        <div>
            <select id="yearFilter" class="year-selector" onchange="refreshData()">
                @for (int i = DateTime.Now.Year; i >= 2020; i--)
                {
                    <option value="@i" style="color:#333">Báo cáo Năm @i</option>
                }
            </select>
        </div>
    </div>

    <div class="kpi-grid">
        <div class="kpi-card">
            <div class="kpi-title">Tổng Doanh Thu</div>
            <div class="kpi-value" id="kpiTotalRevenue">0 ₫</div>
            <div class="kpi-sub" style="color: #666;">
                <i class="fa-solid fa-calendar-check"></i> Dữ liệu cả năm
            </div>
            <i class="fa-solid fa-sack-dollar kpi-icon"></i>
        </div>

        <div class="kpi-card" style="border-left-color: var(--gold-accent);">
            <div class="kpi-title">Tháng Kỷ Lục</div>
            <div class="kpi-value" id="kpiBestMonth">--</div>
            <div class="kpi-sub kpi-trend-up">
                <span id="kpiBestMonthVal">0 ₫</span>
            </div>
            <i class="fa-solid fa-trophy kpi-icon" style="color: var(--gold-accent);"></i>
        </div>

        <div class="kpi-card" style="border-left-color: #2A9D8F;">
            <div class="kpi-title">Trung Bình / Tháng</div>
            <div class="kpi-value" id="kpiAvgRevenue">0 ₫</div>
            <div class="kpi-sub" style="color: #2A9D8F;">
                <i class="fa-solid fa-chart-line"></i> Ổn định
            </div>
            <i class="fa-solid fa-scale-balanced kpi-icon" style="color: #2A9D8F;"></i>
        </div>

        <div class="kpi-card" style="border-left-color: #E76F51;">
            <div class="kpi-title">Đã Bán Ra</div>
            <div class="kpi-value" id="kpiSoldQty">0</div>
            <div class="kpi-sub" style="color: #E76F51;">
                <i class="fa-solid fa-box-open"></i> Đơn vị máy
            </div>
            <i class="fa-solid fa-laptop kpi-icon" style="color: #E76F51;"></i>
        </div>
    </div>

    <div class="main-chart-section">
        <div class="section-header">
            <div class="section-title">Diễn Biến Doanh Thu (12 Tháng)</div>
            <div style="font-size: 0.9rem; color: #888;">Đơn vị: VNĐ</div>
        </div>
        <div style="height: 350px; width: 100%;">
            <canvas id="mainRevenueChart"></canvas>
        </div>
    </div>

    <div class="details-grid">

        <div class="chart-box">
            <div class="section-header">
                <div class="section-title">Hiệu Suất Theo Quý (Quarter)</div>
            </div>
            <div style="height: 250px;">
                <canvas id="quarterChart"></canvas>
            </div>
            <p style="text-align:center; font-size:0.85rem; color:#888; margin-top:10px;">
                So sánh biến động giữa 4 quý trong năm
            </p>
        </div>

        <div class="chart-box">
            <div class="section-header">
                <div class="section-title">Top 5 "Best Seller"</div>
            </div>
            <div style="height: 180px; display: flex; justify-content: center;">
                <canvas id="topProdChart"></canvas>
            </div>
            <div class="top-list" id="topProdList">
            </div>
        </div>

    </div>
</div>

@section scripts {
    <script>
        // Cấu hình chung
        Chart.defaults.font.family = "'Inter', sans-serif";
        Chart.defaults.color = '#666';

        let mainChart = null;
        let quarterChart = null;
        let topChart = null;

        $(document).ready(function () {
            refreshData();
        });

        function refreshData() {
            loadRevenueStats();
            loadTopProducts();
        }

        // --- 1. XỬ LÝ DỮ LIỆU DOANH THU & QUÝ ---
        function loadRevenueStats() {
            var year = $('#yearFilter').val();
            $.ajax({
                url: '/Revenue/GetRevenueData',
                type: 'GET',
                data: { year: year },
                success: function (res) {
                    if (res.success) {
                        var data = res.data; // Mảng 12 tháng

                        // A. TÍNH TOÁN KPI
                        var total = data.reduce((a, b) => a + b, 0);
                        var avg = total / 12;

                        // Tìm tháng cao nhất
                        var maxVal = Math.max(...data);
                        var maxIndex = data.indexOf(maxVal);

                        // Render KPI
                        animateValue("kpiTotalRevenue", 0, total, 1000, true);
                        $('#kpiAvgRevenue').text(avg.toLocaleString('vi-VN', { maximumFractionDigits: 0 }) + ' ₫');

                        if (maxVal > 0) {
                            $('#kpiBestMonth').text("Tháng " + (maxIndex + 1));
                            $('#kpiBestMonthVal').text(maxVal.toLocaleString('vi-VN') + ' ₫');
                        } else {
                            $('#kpiBestMonth').text("--");
                            $('#kpiBestMonthVal').text("0 ₫");
                        }

                        // B. VẼ BIỂU ĐỒ CHÍNH (LINE)
                        renderMainChart(data);

                        // C. TÍNH & VẼ BIỂU ĐỒ QUÝ (BAR)
                        var q1 = data[0] + data[1] + data[2];
                        var q2 = data[3] + data[4] + data[5];
                        var q3 = data[6] + data[7] + data[8];
                        var q4 = data[9] + data[10] + data[11];
                        renderQuarterChart([q1, q2, q3, q4]);
                    }
                }
            });
        }

        // --- 2. XỬ LÝ TOP SẢN PHẨM ---
        function loadTopProducts() {
            $.ajax({
                url: '/Revenue/GetTopProducts',
                type: 'GET',
                success: function (res) {
                    if (res.success) {
                        var labels = res.data.map(x => x.TenLaptop);
                        var values = res.data.map(x => x.SoLuongBan);
                        var totalSold = values.reduce((a, b) => a + b, 0);

                        $('#kpiSoldQty').text(totalSold);
                        renderTopChart(labels, values);
                        renderTopList(res.data);
                    }
                }
            });
        }

        // =========================================
        // PHẦN VẼ BIỂU ĐỒ (CHART RENDER)
        // =========================================

        function renderMainChart(data) {
            var ctx = document.getElementById('mainRevenueChart').getContext('2d');
            var gradient = ctx.createLinearGradient(0, 0, 0, 400);
            gradient.addColorStop(0, 'rgba(114, 47, 55, 0.6)'); // Màu rượu
            gradient.addColorStop(1, 'rgba(255, 255, 255, 0)');

            if (mainChart) mainChart.destroy();

            mainChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: ['Thg 1', 'Thg 2', 'Thg 3', 'Thg 4', 'Thg 5', 'Thg 6', 'Thg 7', 'Thg 8', 'Thg 9', 'Thg 10', 'Thg 11', 'Thg 12'],
                    datasets: [{
                        label: 'Doanh thu',
                        data: data,
                        borderColor: '#722F37', // Viền đỏ rượu
                        backgroundColor: gradient,
                        borderWidth: 3,
                        pointBackgroundColor: '#fff',
                        pointBorderColor: '#d4af37', // Điểm vàng
                        pointRadius: 5,
                        pointHoverRadius: 7,
                        fill: true,
                        tension: 0.4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false },
                        tooltip: {
                            backgroundColor: '#2c1810',
                            padding: 12,
                            callbacks: { label: (c) => c.parsed.y.toLocaleString('vi-VN') + ' ₫' }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: { borderDash: [5, 5], color: '#eee' },
                            ticks: { callback: (v) => (v / 1000000) + 'M' }
                        },
                        x: { grid: { display: false } }
                    }
                }
            });
        }

        function renderQuarterChart(data) {
            var ctx = document.getElementById('quarterChart').getContext('2d');
            if (quarterChart) quarterChart.destroy();

            quarterChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Quý 1', 'Quý 2', 'Quý 3', 'Quý 4'],
                    datasets: [{
                        label: 'Doanh thu Quý',
                        data: data,
                        backgroundColor: [
                            'rgba(114, 47, 55, 0.8)',
                            'rgba(212, 175, 55, 0.8)', // Vàng
                            'rgba(42, 157, 143, 0.8)', // Xanh
                            'rgba(231, 111, 81, 0.8)'  // Cam
                        ],
                        borderRadius: 8,
                        barPercentage: 0.6
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { legend: { display: false } },
                    scales: {
                        y: { beginAtZero: true, display: false },
                        x: { grid: { display: false } }
                    }
                }
            });
        }

        function renderTopChart(labels, values) {
            var ctx = document.getElementById('topProdChart').getContext('2d');
            if (topChart) topChart.destroy();

            topChart = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: labels,
                    datasets: [{
                        data: values,
                        backgroundColor: ['#722F37', '#d4af37', '#2a9d8f', '#e9c46a', '#e76f51'],
                        borderWidth: 0,
                        hoverOffset: 5
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    cutout: '70%',
                    plugins: { legend: { display: false } }
                }
            });
        }

        function renderTopList(data) {
            var html = '';
            data.forEach((item, index) => {
                var rankClass = index === 0 ? 'rank-1' : '';
                html += `
                    <div class="top-item">
                        <div style="display:flex; align-items:center; overflow:hidden;">
                            <div class="rank ${rankClass}">${index + 1}</div>
                            <div class="prod-name" title="${item.TenLaptop}">${item.TenLaptop}</div>
                        </div>
                        <div class="prod-val">${item.SoLuongBan}</div>
                    </div>`;
            });
            $('#topProdList').html(html);
        }

        // Hàm hiệu ứng số chạy (Count Up)
        function animateValue(id, start, end, duration, isMoney) {
            if (start === end) return;
            var range = end - start;
            var current = start;
            var increment = end > start ? 1 : -1;
            var stepTime = Math.abs(Math.floor(duration / 50));
            var timer = setInterval(function () {
                current += range / 50;
                if (current >= end) {
                    current = end;
                    clearInterval(timer);
                }
                var display = isMoney ? Math.floor(current).toLocaleString('vi-VN') + ' ₫' : Math.floor(current);
                $('#' + id).text(display);
            }, stepTime);
        }
    </script>
}