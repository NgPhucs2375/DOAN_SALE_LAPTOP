@model WEB_SALE_LAPTOP.Models.LAPTOP

@{
    ViewBag.Title = "Chỉnh sửa sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string imagePathPrefix = "/Content/images/";
}
<style>
    .img-thumbnail-preview {
        width: 150px;
        height: 150px;
        object-fit: contain;
        border-radius: 4px;
        border: 1px solid #ddd;
        padding: 5px;
    }
</style>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h2 class="mb-0">@ViewBag.Title</h2>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Edit", "ProductManagement", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        @Html.HiddenFor(model => model.MALAPTOP)

                        <div class="mb-3">
                            @Html.LabelFor(model => model.TENLAPTOP, "Tên Laptop", htmlAttributes: new { @class = "form-label fw-bold" })
                            @Html.EditorFor(model => model.TENLAPTOP, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TENLAPTOP, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(model => model.CAUHINH, "Cấu hình", htmlAttributes: new { @class = "form-label fw-bold" })
                            @Html.TextAreaFor(model => model.CAUHINH, 3, 1, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.CAUHINH, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(model => model.MOTA, "Mô tả", htmlAttributes: new { @class = "form-label fw-bold" })
                            @Html.TextAreaFor(model => model.MOTA, 5, 1, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MOTA, "", new { @class = "text-danger" })
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                @Html.LabelFor(model => model.GIA_GOC, "Giá gốc", htmlAttributes: new { @class = "form-label fw-bold" })
                                @Html.EditorFor(model => model.GIA_GOC, new { htmlAttributes = new { @class = "form-control", type = "number", min = "0" } })
                                @Html.ValidationMessageFor(model => model.GIA_GOC, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-4 mb-3">
                                @Html.LabelFor(model => model.GIA_BAN, "Giá bán", htmlAttributes: new { @class = "form-label fw-bold" })
                                @Html.EditorFor(model => model.GIA_BAN, new { htmlAttributes = new { @class = "form-control", type = "number", min = "0" } })
                                @Html.ValidationMessageFor(model => model.GIA_BAN, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-4 mb-3">
                                @Html.LabelFor(model => model.SOLUONG_TON, "Số lượng tồn", htmlAttributes: new { @class = "form-label fw-bold" })
                                @Html.EditorFor(model => model.SOLUONG_TON, new { htmlAttributes = new { @class = "form-control", type = "number", min = "0" } })
                                @Html.ValidationMessageFor(model => model.SOLUONG_TON, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                @Html.LabelFor(model => model.MAHANG, "Hãng sản xuất", htmlAttributes: new { @class = "form-label fw-bold" })
                                @Html.DropDownList("MAHANG", null, "-- Chọn hãng --", htmlAttributes: new { @class = "form-select" })
                                @Html.ValidationMessageFor(model => model.MAHANG, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-6 mb-3">
                                @Html.LabelFor(model => model.MALOAI, "Loại Laptop", htmlAttributes: new { @class = "form-label fw-bold" })
                                @Html.DropDownList("MALOAI", null, "-- Chọn loại --", htmlAttributes: new { @class = "form-select" })
                                @Html.ValidationMessageFor(model => model.MALOAI, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <hr />
                        <label class="form-label fw-bold">Quản lý hình ảnh</label>

                        <div class="row mb-3">
                            <div class="col-md-3 col-6">
                                <label class="form-label">Ảnh 0 (Đại diện)</label>
                                <img src="@Url.Content(imagePathPrefix + (Model.HINHANH0 ?? "default-image.png"))" class="img-thumbnail-preview" />
                                @Html.HiddenFor(model => model.HINHANH0)
                            </div>
                            <div class="col-md-3 col-6">
                                <label class="form-label">Ảnh 1</label>
                                <img src="@Url.Content(imagePathPrefix + (Model.HINHANH1 ?? "default-image.png"))" class="img-thumbnail-preview" />
                                @Html.HiddenFor(model => model.HINHANH1)
                            </div>
                            <div class="col-md-3 col-6">
                                <label class="form-label">Ảnh 2</label>
                                <img src="@Url.Content(imagePathPrefix + (Model.HINHANH2 ?? "default-image.png"))" class="img-thumbnail-preview" />
                                @Html.HiddenFor(model => model.HINHANH2)
                            </div>
                            <div class="col-md-3 col-6">
                                <label class="form-label">Ảnh 3</label>
                                <img src="@Url.Content(imagePathPrefix + (Model.HINHANH3 ?? "default-image.png"))" class="img-thumbnail-preview" />
                                @Html.HiddenFor(model => model.HINHANH3)
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-3 col-6 mb-3">
                                <label class="form-label" for="HINHANH0_File">Tải lên ảnh 0</label>
                                <input type="file" name="HINHANH0_File" id="HINHANH0_File" class="form-control" />
                            </div>
                            <div class="col-md-3 col-6 mb-3">
                                <label class="form-label" for="HINHANH1_File">Tải lên ảnh 1</label>
                                <input type="file" name="HINHANH1_File" id="HINHANH1_File" class="form-control" />
                            </div>
                            <div class="col-md-3 col-6 mb-3">
                                <label class="form-label" for="HINHANH2_File">Tải lên ảnh 2</label>
                                <input type="file" name="HINHANH2_File" id="HINHANH2_File" class="form-control" />
                            </div>
                            <div class="col-md-3 col-6 mb-3">
                                <label class="form-label" for="HINHANH3_File">Tải lên ảnh 3</label>
                                <input type="file" name="HINHANH3_File" id="HINHANH3_File" class="form-control" />
                            </div>
                        </div>
                        <hr />
                        <div class="mb-3 form-check">
            
                            @Html.CheckBox("TRANGTHAI", Model.TRANGTHAI.GetValueOrDefault(false), new { @class = "form-check-input" })
                            @Html.Label("TRANGTHAI", "Kinh doanh", htmlAttributes: new { @class = "form-check-label" })
                        </div>

                        <div class="mt-4">
                            <input type="submit" value="Cập nhật" class="btn btn-primary" />
                            @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-secondary" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>