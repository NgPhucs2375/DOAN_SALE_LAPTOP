            </div>

            <div class="header-main">
                <div class="container-fluid header-main-content">

                    <nav class="main-nav">
                        <ul>
                            <li><a href="@Url.Action("Index", "Home")">Trang Chủ</a></li>
                            <li class="main-nav-dropdown">
                                <a href="#">Sản Phẩm <i class="fa-solid fa-chevron-down arrow-small"></i></a>
                                <ul class="main-nav-dropdown-menu" style="background: white;">
                                    <li><a href="@Url.Action("TimKiemTheoLoai", "Home", new { tenLoai = "Laptop Gaming" })"><i class="fa-solid fa-gamepad"></i> Gaming</a></li>
                                    <li><a href="@Url.Action("TimKiemTheoLoai", "Home", new { tenLoai = "Laptop Văn phòng" })"><i class="fa-solid fa-briefcase"></i> Văn phòng</a></li>
                                    <li><a href="@Url.Action("TimKiemTheoLoai", "Home", new { tenLoai = "Macbook" })"><i class="fa-brands fa-apple"></i> MacBook</a></li>
                                    <li><a href="@Url.Action("TimKiemTheoLoai", "Home", new { tenLoai = "Laptop Đồ họa - Kỹ thuật" })"><i class="fa-solid fa-pen-ruler"></i> Đồ họa</a></li>
                                </ul>
                            </li>
                            <li><a href="@Url.Action("About", "Home")">Về Chúng Tôi</a></li>
                            <li><a href="@Url.Action("Contact", "Home")">Liên Hệ</a></li>
                        </ul>
                    </nav>

                    <div class="search-container">
                        @using (Html.BeginForm("TimKiem", "Home", FormMethod.Get, new { @class = "search-form" }))
                        {
                            <button class="btn-search" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
                            <input class="search-box" type="search" name="tuKhoa" placeholder="Tìm laptop, phụ kiện..." value="@ViewBag.TuKhoa">
                        }
                    </div>

                    <div class="header-actions">
                        <a class="cart-button" href="@Url.Action("Index", "Cart")" style="box-shadow: 0 4px 10px rgba(179, 64, 74, 0.3);">
                            <i class="fa-solid fa-bag-shopping"></i>
                            <span>Giỏ hàng</span>
                            @{ Html.RenderAction("_CartIcon", "Cart"); }
                        </a>
                    </div>
                </div>
            </div>
        </header>

        <main class="page-content">
            @RenderBody()
        </main>

        <footer class="main-footer">
            <div class="container-fluid">
