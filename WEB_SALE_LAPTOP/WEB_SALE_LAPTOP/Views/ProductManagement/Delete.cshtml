@model WEB_SALE_LAPTOP.Models.LAPTOP
@{
    ViewBag.Title = "Xác nhận Xóa";
    // Layout đã được gán tự động
}

<div class="page-header">
    <h2 class="section-title">@ViewBag.Title</h2>
</div>

<div class="product-section" style="max-width: 800px;">

    <h3 class="delete-warning"><i class="fa-solid fa-triangle-exclamation"></i> Bạn có chắc chắn muốn xóa sản phẩm này?</h3>
    <p class="delete-subtext">Hành động này không thể hoàn tác.</p>

    @if (ViewBag.Error != null)
    {
        <div class="voucher-message error" style="margin-bottom: 1rem;">@ViewBag.Error</div>
    }

    <hr style="margin: 1.5rem 0;" />

    <div class="product-info-cell" style="padding: 1rem; background-color: var(--bg-main); border-radius: 8px;">
        <img src="~/Content/images/@Model.HINHANH0" alt="@Model.TENLAPTOP" class="table-product-img" />
        <div class="product-info-text">
            <strong>@Html.DisplayFor(model => model.TENLAPTOP)</strong>
            <small>@Html.DisplayFor(model => model.HANG.TENHANG) / @Html.DisplayFor(model => model.LOAI_LAPTOP.TENLOAI)</small>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions-container">

            <button type="submit" class="cart-button">
                <i class="fa-solid fa-trash"></i> Xác nhận Xóa
            </button>

            <a href="@Url.Action("Index")" class="btn-detail" style="text-decoration: none;">
                Hủy & Quay lại
            </a>
        </div>
    }
</div>